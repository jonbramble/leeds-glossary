<h1>Editing subtopic</h1>

<%= form_for([@topic, @subtopic]) do |f| %>
  <% if @subtopic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subtopic.errors.count, "error") %> prohibited this subtopic from being saved:</h2>

      <ul>
      <% @subtopic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<p><b>Topic:</b><%= @topic.name %></p>
<ol>
  <li>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </li>
  <li>
    <%= f.submit %>
  </li>
</ol>
<% end %>

<%= link_to 'Show', topic_subtopic_path(@topic,@subtopic) %> |
<%= link_to 'Back', topic_subtopics_path(@topic) %>
